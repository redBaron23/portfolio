{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}/src",
      "targetTypes": ["page", "webview"],
      "runtimeExecutable": "/usr/bin/vivaldi-stable"
    },
    {
      "type": "chrome",
      "request": "attach",
      "urlFilter": "http://localhost:3000/*",
      "webRoot": "${workspaceFolder}/src",
      "targetTypes": ["page", "webview"]
    }
  ]
}
